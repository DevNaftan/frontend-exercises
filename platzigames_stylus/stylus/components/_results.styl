.result
  padding: 0 20px
  &__header
    display: flex
    margin: 15px 0 25px 0
    justify-content: space-between
    align-items: center
    h2
      font-weight: 400
      style-font(font-2)
    .filter
      display: flex
      width: 130px
      padding: 10px
      justify-content: space-between
      align-items: center
      color: alpha(color-primary, .6)
      box-shadow: 0px 0px 10px 0px rgba(51,51,51,.5);
      span
        font-weight: bold
        style-font(font-2)
      span:hover
        cursor: pointer
        user-select: none
        hover()
      i:hover
        cursor: pointer
        user-select: none
        hover()
  &__content
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    .box
      width: 100%
      max-width 400px
      height: 100%
      margin-bottom: 50px
      box-shadow: 0px 0px 10px 0px rgba(51,51,51,.5);
      img
        width: 100%
      &__details
        padding: 15px
        border-bottom: 1px solid alpha(color-primary, .30)
        strong
          color: color-secundary
          style-font(font-2)
        h3
          min-height: 60px
          margin-bottom: 10px
          style-font(font-2)
        p
          line-height(16px)
        a
          display: block
          width: 55px
          margin-top: 10px
          color: alpha(color-primary, .6)
          style-font(font-2)
        a:hover
          hover()
      .statistics--box
        padding: 15px
        ul
          display: flex
          justify-content: space-evenly
          li
            display: inherit
            list-style: none
            align-items: center
            a
              color: alpha(color-primary, .4)
              i
                margin-right: 5px
              span
                style-font(font-1)
            a:hover
              hover()